class Solution {
public:
    bool sumOfNumberAndReverse(int num) {
        for (int i = 0; i <= num; i++) {
            int n = i;
            int reverse = 0;
            while (n != 0) {
                int temp = n % 10;
                reverse = (reverse * 10) + temp;
                n = n / 10;
            }
            if ((i + reverse) == num) {
                return true;
                break;
            }
        }
        return false;
    }
};
