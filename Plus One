class Solution {
public:
    vector<int> plusOne(vector<int>& digits) {
        int n = digits.size();
        // Traverse from end to start
        for (int i = n - 1; i >= 0; i--) {
            if (digits[i] < 9) {
                digits[i]++;  // simple increment, no carry over needed
                return digits;
            }
            digits[i] = 0;  // carry over, set current digit to 0
        }
        // If all digits were 9, we need to add 1 at the beginning
        digits.insert(digits.begin(), 1);
        return digits;
    }
};
