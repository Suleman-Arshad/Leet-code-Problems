class Solution {
public:
    bool isAnagram(string s, string t) {
        if (s.size() == t.size()) {
        start:
            for (int i = 0; i < s.size(); i++) {
                for (int j = 0; j < t.size(); j++) {
                    if (s[i] == t[j]) {
                        s.erase(s.begin() + i);
                        t.erase(t.begin() + j);
                        goto start;
                    }
                }
            }
        }
        if(s.empty()&&t.empty()){
            return true;
        }
        return false;
    }
};
