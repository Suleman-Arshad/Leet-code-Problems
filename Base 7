class Solution {
public:
    string convertToBase7(int num) {
        
    if (num == 0) return "0";

        bool isNegative = num < 0;
        num = abs(num);

        string result = "";

        while (num > 0) {
            int rem = num % 7;
            result = to_string(rem) + result;  // prepend digit
            num /= 7;
        }

        if (isNegative)
            result = "-" + result;

        return result;
    }
};
